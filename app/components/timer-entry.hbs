<div class='group px-6 hover:bg-gray-100 py-3 text-sm font-light flex'>
  <div class='flex-1 flex items-center'>
    <span
      data-test-timer-title
      class='mr-4 {{if @timer.title '' 'text-gray-400'}}'
    >
      {{or @timer.title 'No description'}}
    </span>

    {{#if @timer.project}}
      <span
        data-test-project-name
        class='block bg-pink-100 text-pink-800 rounded whitespace-nowrap px-2 py-1 text-xs flex mr-6'
      >
        {{@timer.project.name}}
      </span>
    {{/if}}
  </div>

  <span data-test-timestamp class='tabular-nums mr-8'>
    {{format-timestamp @timer.startTimestamp}} - {{format-timestamp
      @timer.endTimestamp
    }}
  </span>

  <span data-test-duration class='tabular-nums'>
    {{format-duration @timer.durationInSeconds}}
  </span>

  <div class='invisible group-hover:visible w-8 flex justify-end'>
    <button
      data-test-delete-button
      type='button'
      {{on 'click' (optional @onDelete)}}
    >
      <FaIcon @icon='trash' class='text-gray-500 hover:text-gray-700' />
    </button>
  </div>
</div>
