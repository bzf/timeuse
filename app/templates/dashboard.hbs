<TimeTracker
  @currentTimer={{this.currentTimer}}
  @currentDuration={{this.currentDuration}}
  @onStart={{this.startTimer}}
  @onStop={{this.stopTimer}}
  @onSave={{this.saveTimer}}
  @projects={{this.model.projects}}
  @onSelect={{queue (fn (mut this.currentTimer.project)) this.saveTimer}}
  @selectedProject={{this.currentTimer.project.content}}
/>

{{#each this.model.dailyTimers as |dailyTimer|}}
  <DailyTimers @dailyTimer={{dailyTimer}} @onDelete={{this.deleteTimer}} />
{{/each}}
